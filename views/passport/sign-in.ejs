<%- include('../partials/header', { title: 'تسجيل الدخول', user: user }) %>

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <h1>تسجيل الدخول</h1>
            <p>ادخل إلى حسابك لإدارة المنتجات</p>
        </div>

        <% if (err && err.length > 0) { %>
            <div class="alert alert-danger">
                <% err.forEach(error => { %>
                    <p><%= error %></p>
                <% }) %>
            </div>
        <% } %>

        <form action="/passport/sign-in" method="POST" class="auth-form">
            <div class="form-group">
                <label for="email">البريد الإلكتروني</label>
                <input type="email" id="email" name="email" placeholder="example@email.com" required>
            </div>

            <div class="form-group">
                <label for="password">كلمة المرور</label>
                <input type="password" id="password" name="password" placeholder="كلمة المرور" required>
            </div>

            <button type="submit" class="btn btn-primary btn-block">تسجيل الدخول</button>
        </form>

        <div class="auth-footer">
            <p>ليس لديك حساب؟ <a href="/passport/sign-up">إنشاء حساب جديد</a></p>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>
